{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/hackrx/run",
      "dest": "/api/main.py"
    }
  ],
  "installCommand": "python3 -m pip install --no-cache-dir --upgrade pip setuptools && python3 -m pip install --no-cache-dir -r requirements.txt",
  "functions": {
    "api/**": {
      "excludeFiles": [
        "**/*.pyc",
        "**/__pycache__/**",
        ".env",
        ".git/**",
        ".venv/**",
        "automations/**",
        "docs/**",
        "logdir/**",
        "tests/**",
        "prisma/migrations/**",
        "Dockerfile",
        "README.md",
        "pytest.ini",
        "package.json"
      ]
    }
  }
}
